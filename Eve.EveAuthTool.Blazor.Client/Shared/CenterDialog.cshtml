<div class="dialog-container @(Show ? "show" : "")">
    <div class="dialogClose">
        <i onclick="@(()=> { Show = false; StateHasChanged(); })" class="fas fa-times"></i>
    </div>
    <div class="dialog">
        @ChildContent
    </div>
</div>
@functions
{
    [Parameter] RenderFragment ChildContent { get; set; }
    [Parameter] bool Show { get; set; }
}
