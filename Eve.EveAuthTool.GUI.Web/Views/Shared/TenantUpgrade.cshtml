@model Eve.EveAuthTool.GUI.Web.Models.Shared.UpgradeModel
@{
    ViewData["Title"] = "TenantUpgrade";
}
@section Styles{

    <link rel="stylesheet" href="~/css/spinner.css" />


}
@section Scripts{
    <script>
        var query = setInterval(queryStatus, 2500);

        function queryStatus() {

            $.ajax({
                url: "@Url.Action("IsTenantReady", "Registration")",
                success: function (data) {
                    console.log(data);
                    if (data) {
                        window.location.href = '@(Model.Url)';
                    }
                }
            });
        }
    </script>
}
<div class="content-box width-50 center">
    <h2>Please Wait !</h2>
    <p>
        Your tenant database is currently being upgraded.
    </p>
    <div class="line-spinner center">
        <div class="rect1"></div>
        <div class="rect2"></div>
        <div class="rect3"></div>
        <div class="rect4"></div>
        <div class="rect5"></div>
    </div>
</div>



