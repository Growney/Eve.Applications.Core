@inject Eve.ESI.Standard.Authentication.Account.IScopeGroupProvider scopes
@inject Eve.EveAuthTool.Standard.Security.Middleware.IViewParameterProvider parameters

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Eve Swagger Auth</title>

    <link rel="stylesheet" href="~/lib/font-awesome-5/web-fonts-with-css/css/fontawesome-all.min.css" />
    <link rel="stylesheet" href="~/css/dialog.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/material.css" />
    @RenderSection("Styles", required: false)

    @{
        ViewBag.menus = new List<object>()
        {
            new {text= "Account" },
            new {text= "About ESA", path = "/Home/AboutESA/" },
            new {text= "About Me", path = "/Home/AboutMe/" },
            new {text= "Management", path = "/Management/Index" }
        };
    }

</head>
<body>
    <div class="site">
        <div class="site-logo">
            <img class="center" src="@(parameters.Package.IsTenant ? parameters.Package.ESIConfiguration.GetImageSource((Eve.ESI.Standard.eESIEntityType)parameters.Package.CurrentTenant.EntityType,parameters.Package.CurrentTenant.EntityId,128) : "/images/logo.png")" />
        </div>
        <div class="site-title">
            @(parameters.Package.IsTenant ? parameters.Package.CurrentTenant.DisplayName : "")
        </div>
        <div class="site-info">
            @if (parameters.Package.IsTenant)
            {
                @if (parameters.Package.IsAuthenticated)
                {
                    var characters = parameters.Package.Characters.GetAccountCharacters().ToList();
                    if(characters.Count > 0)
                    {
                        @($"Welcome {await parameters.Package.PublicDataProvider.GetEntityName(Eve.ESI.Standard.eESIEntityType.character,characters[0].EntityID)}")
                    }
                    
                    <a class="button-list-button registration-button-small" asp-action="Logout" asp-controller="Registration">Log Out</a>
                }
                else
                {
                    <a asp-action="EveLogin" asp-controller="Registration" asp-route-ReturnUrl="@Context.Request.Path" class="button-list-button registration-button-small hover-image-button">Login<img src="~/images/eve-sso-login-black-small.png" /></a>
                    <a class="button-list-button registration-button-small" href="#" onclick="showDialog('characterRegistrationDialog')">Register</a>
                }
            }
        </div>
        <div class="site-user-info">

        </div>
        <div class="site-breadcrumbs">
            @RenderSection("Breadcrumbs", false)
        </div>
        <div class="site-content">
            @RenderBody()
        </div>
        <div class="site-sidebar-left">
            @if (parameters.Package.IsTenant)
            {
                <a asp-controller="Management" asp-action="Index">Management</a>
            }
            else
            {
                <a asp-controller="Registration" asp-action="Group">Create Group</a>
            }
            <a asp-controller="Home" asp-action="AboutESA">About ESA</a>
            <a asp-controller="Home" asp-action="AboutMe">About Me</a>
        </div>
        <div class="site-footer">
            All
            <a href="/information/legal/">EVE related materials</a>
            are property of
            <a href="http://www.ccpgames.com">CCP Games</a> -
            <a href="/information/legal/">CCP Copyright Notice</a>
        </div>
    </div>

    <div id="characterRegistrationDialog" class="dialog-container">
        <div class="dialog-close">
            <i class="fas fa-times"></i>
        </div>
        <div class="dialog">
            @{
                var characterOptions = new Eve.EveAuthTool.GUI.Web.Models.Registration.RegistrationFormOptions()
                {
                    Action = "Character",
                    Controller = "Registration",
                    Title = "Register new Character Account",
                    Description = "Register to use the application as a single user allowing you to view and multiple characters information",
                    Groups = scopes.GetCharacterScopeGroups()
                };
            }
            <partial name="RegistrationForm" model="characterOptions" />
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/Microsoft.jQuery.Unobtrusive.Ajax/jquery.unobtrusive-ajax.min.js"></script>
    <script src="https://cdn.syncfusion.com/ej2/dist/ej2.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/dialog.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    <ejs-scripts></ejs-scripts>
</body>
</html>
